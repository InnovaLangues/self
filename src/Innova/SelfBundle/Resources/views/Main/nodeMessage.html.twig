<script>
	{% if isMaintenanceEnabled() %}
    showFlash("warning", "{{ getMaintenanceText() }}");
    {% endif %}

	var client = new Faye.Client("{{ faye_server }}");
	client.subscribe('/all', function (message) {
	    if (!$("#alert-maintenance").length) {
	    	showFlash("warning", message.text);
	    };
	});
	{% if app.user is not null and is_granted('ROLE_ADMIN') %}
	client.subscribe('/admin', function (message) {
	    showFlash("warning", message.text);
	});
	{% endif %}
</script>


