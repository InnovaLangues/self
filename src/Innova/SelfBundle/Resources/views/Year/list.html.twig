    <span class="glyphicon glyphicon-plus"></span> {{'year.create' | trans }}
</a>

<a href="{{ path('institutions') }}" class="btn btn-default">
    <span class="glyphicon glyphicon-leaf"></span> {{'institution.manage' | trans }}
</a>

<hr/>

