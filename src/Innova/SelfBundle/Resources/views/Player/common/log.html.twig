{% extends '::base.html.twig' %}

{% block body -%}

<div class="row">
	<div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'editor.session.connexion' | trans }}</div>
            <div class="panel-body">
				{% if sessions is defined %}
					<p>{{ 'editor.session.availableForCode'|transchoice(sessions|length) }}</p>
					<ul class="list-group">
					{% set warning = false %}
					{% for session in sessions %}
						{% if session.test.language.name == "Japanese" %}
							{% set warning = true %}
							{% set sessionConcerned = true %}
						{% endif %}
						<li class="list-group-item">
							<a {% if sessionConcerned is defined %}class="session-japanese disabled" {% endif %} href="{{ path('test_start', { 'testId': session.test.id, 'sessionId': session.id } )}}">{{ session.test.name }} - {{ session.name }}</a>
						</li>
					{% endfor %}
					{% if warning %}
						<li class="list-group-item list-group-item-warning">
							<a class="japanase-warning" href="#">Lire</a> l'avertissement concernant le japonais.
						</li>
					{% endif %}
					</ul>
				{% else %}
					<form class="form-inline" action="{{ path('session_log') }}" method="post" autocomplete="off">
						<p>Code de la session :</p>
						<div class="form-group">
							<input id="passwd" class="form-control" type="password" name="passwd">
						</div>
						<button type="submit" class="btn btn-default btn-primary">OK</button>
					</form>
				{% endif %}

           	</div>
        </div>
    </div>
    <div id="video-help"  class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">Vid√©o d'aide</div>
            <div class="panel-body text-center">
                {% include 'InnovaSelfBundle::Main/help.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }} 
    <script type="text/javascript" src="{{ asset("bundles/innovaself/js/session-warning.js") }}"></script>
{% endblock %}


