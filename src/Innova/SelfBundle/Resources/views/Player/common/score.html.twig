{% if session.globalScoreShow %}
<div class="col-md-12">
	<div class="panel panel-default">
	  <div class="panel-body text-center">
	    <h4><span class="glyphicon glyphicon-thumbs-up"></span> {{ session.globalScoreWording }} </h4>
	    {% if levelFeedback is not null %}
	    	{{ levelFeedback }}
	    {% else %}
	        -
	    {% endif %}
	  </div>
	</div>
</div>
{% endif %}

