{% set mediaType = proposition.media.mediaType.name %}

<div class="col-md-{{ propWidth }}">
    <div dropzoneId="subquestion{{ proposition.id }}" id="droppable-{{ proposition.id }}" class="dropzone source">
        <div class="draggable answer-APP"  propositionId="{{ proposition.id }}">
             <!-- <span class="glyphicon glyphicon-move touch-me"></span> -->
            {% if mediaType == "texte" %}
                    <div class="answer-APP-text">{{ proposition.media.description }}</div>
            {% elseif mediaType == "audio" %}
                    {{ macros.audio(subquestion.id, subquestion.media, "audio.png", 100, 0, "") }}
            {% endif %}
        </div>
    </div>
</div>



