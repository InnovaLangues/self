{% import "InnovaSelfBundle:Player:common/macros.html.twig" as macros %}

<div class="col-md-{{ propWidth }}">
    <div dropzoneId="subquestion{{ subquestion.id }}" class="dropzone droppable cible">
        {% for i, proposition in subquestion.propositions %}
            <input required id="input-proposition{{ proposition.id }}" type="radio" equivalence={{ macros.getEquivalence(proposition.media, question.subquestions[0] ) }} value={{ proposition.id }} name="{{ subquestion.id }}[]" class="drag-and-drop-input"/>
        {% endfor %}
    </div>
</div>
