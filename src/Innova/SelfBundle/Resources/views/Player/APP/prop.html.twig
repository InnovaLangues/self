{% if subquestion.media is not null %}
    {% set mediaType = subquestion.media.mediaType.name %}
    <div class="col-md-{{ propWidth }} proposition-APPT-container">
        <div class="proposition-APP">
        {% if mediaType == "texte" %}
                {{ subquestion.media.description | raw }}
        {% elseif mediaType == "audio" %}
            {{ macros.audio(subquestion.media.id, subquestion.media, "situation_dialogue.png", 90, 0, "") }}
        {% elseif mediaType == "image" %}
            {{ macros.imageAPP(subquestion.media.id, subquestion.media, 'player.tooltip.enlarge' | trans, question.subquestions |length ) }}
        {% endif %}
        </div>
    </div>
    {% if mediaType == "image" %}
        {{ macros.modale(subquestion.media.id, subquestion.media, 'player.tooltip.enlarge' | trans) }}
    {% endif %}
{% endif %}


