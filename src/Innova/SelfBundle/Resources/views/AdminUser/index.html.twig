{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'user.list' | trans }}</h1>
    <table class="records_list table">
        <thead>
            <tr>
                <th>{{ 'user.name' | trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td class="text-right">
                    <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}" class="btn btn-primary">{{ 'user.create' | trans }}</a>
{% endblock %}
