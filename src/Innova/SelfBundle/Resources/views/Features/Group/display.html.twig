{% extends '::base.html.twig' %}

{% block body -%}

{% if checkRight("right.editgroup") %}
	<a class="btn btn-default btn-sm" href="{{ path('editor_group_edit', { 'groupId': group.id }) }}">
	    <span class="glyphicon glyphicon-edit"></span> {{ 'group.edit' | trans }}
	</a>
{% endif %}

{% if checkRight("right.listgroup") %}
	<a class="btn btn-default btn-sm" href="{{ path('editor_groups') }}">
	    <span class="glyphicon glyphicon-calendar"></span> {{ 'group.list' | trans }}
	</a>
{% endif %}

{% if checkRight("right.csvimportgroup") %}
	<a class="btn btn-default btn-sm" href="{{ path('editor_group_import_user', { 'groupId': group.id }) }}">
	    <span class="glyphicon glyphicon-import"></span> {{ 'group.import' | trans }}
	</a>
{% endif %}

<hr/>

<h3>{{ group.name }}</h3>

<h4> {{ 'group.sessions' | trans }} </h4>
{% if group.sessions | length > 0 %}
	{% for session in group.sessions %}
	    {{ session.test.name }} - {{ session.name }} -
	{% endfor %}
{% else %}
    <div class="alert alert-info" role="alert">{{ 'group.no_session' | trans }}</div>
{% endif %}

<h4> {{ 'group.users' | trans }} </h4>
{% if group.users | length > 0 %}
	{% for user in group.users %}
	{{ user.username }} -
	{% endfor %}
{% else %}
    <div class="alert alert-info" role="alert">{{ 'group.no_user' | trans }}</div>
{% endif %}

{% endblock %}
