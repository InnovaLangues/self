{% extends '::base.html.twig' %}

{% block body -%}

<a class="btn btn-default" href="{{ path('editor_tests_show') }}">
    <span class="glyphicon glyphicon-chevron-left"></span> Revenir Ã  la liste des tests
</a>

<hr/>

<h3>Edition d'un test</h3>
<form role="form" action="{{ path('editor_test_edit', { 'testId': test.id }) }}" method="POST"> 
    <div class="form-group">
        <label for="test-name">Nom du test</label>
        <input value="{{ test.name }}" id="test-name" type="text" class="form-control" name="test-name" required />
    </div>

    <div class="form-group">
        <label for="test-language">Langue</label>
        <select id="test-language" class="form-control" name="test-language" required />
            {% for language in languages %}
                <option {% if test.language == language %}selected{% endif %} value="{{ language.id }}">{{ language.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label for="test-display">Actif ?
            <input {% if test.actif == true %}checked{% endif %} id="test-display" value="actif" type="checkbox" class="form-control" name="test-display" />
        </label>
    </div>

    <div class="form-group">
        <input type="submit" value="Enregistrer les modifications" class="btn btn-primary pull-right">
    </div>
</form>

{% endblock %}
