{% import "InnovaSelfBundle:Editor:common/macros.html.twig" as macros %}

{% if proposition %}
    <p id="proposition-{{ proposition.id }}-container" class="proposition" data-subquestion-id="{{ proposition.subquestion.id }}">
        {{ macros.deleteProposition(proposition) }}
        {{ macros.isRightAnswer(proposition) }}
        {# {{ macros.inputs(proposition.subquestion, proposition) }} #}
        {{ macros.displayMedia(proposition.media) }}
    </p>
{% endif %}