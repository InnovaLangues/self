<div id="identity-container">
    {% import "InnovaSelfBundle:Editor:common/macros.html.twig" as macros %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
            Fiche d'identit√©
            </h3>
        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="status">Status</label>

                            <select id="status" class="form-control">
                                {% for s in status %}
                                <option {% if questionnaire.status is not null and questionnaire.status == s %}selected{% endif %} value="{{ s.id }}">
                                {{ s.name }}
                                </option>
                                {% endfor %}
                             </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="language">Langue</label>
                            <select id="language" class="form-control">
                                {% for language in get_languages() %}
                                    <option {% if questionnaire.language is not null and questionnaire.language == language %}selected{% endif %} value="{{ language.id }}"> {{ language.name }}
                                {% endfor %}
                             </select>
                    </div>
                </div>
             </div>
        </div>
    </div>
</div>
