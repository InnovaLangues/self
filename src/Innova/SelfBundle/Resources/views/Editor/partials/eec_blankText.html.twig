<div id="blank-text-container" class="panel panel-default">
    {% import "InnovaSelfBundle:Editor:common/macros.html.twig" as macros %}
    <div class="panel-heading">
        Texte lacunaires
        {% if questionnaire.mediaBlankText is not null %}
            <div class="pull-right">
                {{ macros.editMedia(questionnaire.mediaBlankText, "subquestion") }}
                <span id="delete-blank-text" class="glyphicon glyphicon-remove btn btn-default btn-sm" data-toggle="tooltip" data-original-title="{{ 'generic.remove' | trans }}"></span>
            </div>
        {% endif %}
    </div>
    <div class="panel-body">
        {% if questionnaire.mediaBlankText is null %}
        <div class="text-center">
            <span id="add-blank-text" class="btn btn-default">
                {{ 'generic.add' | trans }}
            </span>
        </div>
        {% else %}
            {{ macros.displayMedia(questionnaire, questionnaire.mediaBlankText) }}
        {% endif %}
    </div>
</div>
