<span class="btn btn-default btn-xs app-add-subquestion">{{ 'editor.app.add_pair' | trans }}</span>
{% if questionnaire.questions[0].subquestions | length > 0 %}
    <span class="btn btn-default btn-xs app-add-distractor">{{ 'editor.app.add_distractor' | trans }}</span>
    {% set subquestions = questionnaire.questions[0].subquestions %}
    <br/><br/>
    <table class="table">
        <tr>
            <th>{{ 'editor.app.proposition' | trans }}</th>
            <th>{{ 'editor.app.associated_answer' | trans }}</th>
            <th></th>
        </tr>
    {% for subquestion in subquestions %}
        <tr>
        {% if subquestion.media is not null %}
                <td class="col-md-6">
                    {{ macros.editMedia(subquestion.media, "subquestion") }}
                    {{ macros.displayMedia(questionnaire, subquestion.media) }}
                </td>
                <td>
                    {{ macros.displayRightAnswerAPP(questionnaire, subquestion) }}
                </td>
        {% else %}
                <td>
                    <span class="btn btn-default btn-xs app-add-media" data-subquestion-id="{{ subquestion.id }}">{{ 'editor.app.add_media' | trans }}</span>
                </td>
        {% endif %}
            <td>
                <span class="app-delete-subquestion glyphicon glyphicon-remove btn btn-default btn-sm" data-subquestion-id="{{ subquestion.id }}" data-toggle="tooltip" data-original-title="{{ 'editor.app.remove_pair' | trans }}"></span>
            </td>
            <td>
                <span class="btn btn-default btn-xs identity-subquestion" data-subquestion-id="{{ subquestion.id }}" data-toggle="tooltip" data-original-title="{{ 'editor.subquestion.identity' | trans }}">
                    <span class="glyphicon glyphicon-list-alt"></span>
                </span>
            </td>
        </tr>
    {% endfor %}
        <tr>
            <th>{{ 'editor.app.distractors' | trans }}</th>
        </tr>
        {{ macros.displayDistractor(questionnaire) }}
    </table>
{% endif %}
