<table class="table">
     <tr>
        <th></th>
        <th>Info-bulle</th>
        <th>Indice : syllabe</th> <!-- Changement, demande Cristiana -->
        <th>En clair</th> <!-- Nouvelle zone, demande Cristiana -->
    </tr>
    <!-- Initialisation de la variable qui va me dire si on n'est sur
    la premiÃ¨re occurrence ou pas -->
    {% set first = true %}
    {% for subquestion in subquestions %}
        <tr>
            {% set propositions = subquestion.propositions %}
            {% for proposition in propositions if proposition.media.mediaPurpose.name == "proposition" %}
            <td>
                {{ proposition.media.description }}
            </td>
            {% endfor %}
            <td>
                <input class="clue" data-subquestion-id="{{ subquestion.id }}" type="text" value="{% if subquestion.clue is not null %}{{ subquestion.clue.media.description }}{% endif %}"/>
                {% if subquestion.clue is not null %}
                    <span rel="tooltip" data-original-title="fonctionnel">f</span>
                    <input class="clue-type" type="radio" name="clueType-{{ subquestion.clue.id }}[]" value="fonctionnel" data-clue-id="{{ subquestion.clue.id }}" {% if subquestion.clue.clueType.name == "fonctionnel" %}checked{% endif %}/>

                    <span rel="tooltip" data-original-title="didactique">d</span>
                    <input class="clue-type" type="radio" name="clueType-{{ subquestion.clue.id }}[]" value="didactique" data-clue-id="{{ subquestion.clue.id }}" {% if subquestion.clue.clueType.name == "didactique" %}checked{% endif %}/>
                {% endif %}
            </td>
             <td>
                <input class="syllable" data-subquestion-id="{{ subquestion.id }}" type="text" />
            </td>
            <!-- Nouvelle zone, demande Cristiana -->
             <td>
                {% if first %}
                    <input class="display" data-subquestion-id="{{ subquestion.id }}" type="checkbox" name="displayType[]" {% if subquestion.display  %}checked {% endif %} />
                    {% set first = false %} <!-- Pour n'afficher qu'une seule ligne/subquestion-->
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
