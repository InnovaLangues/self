<div id="contexte-container" class="panel panel-default">
    {% import "InnovaSelfBundle:Editor:common/macros.html.twig" as macros %}
    <div class="panel-heading">
        {{ 'editor.questionnaire.context' | trans }}
        {% if questionnaire.mediaContext is not null %}
            <span id="delete-context" class="glyphicon glyphicon-remove btn btn-default btn-sm pull-right" data-toggle="tooltip" data-original-title="{{ 'generic.remove' | trans }}"></span>
        {% endif %}
    </div>
    <div class="panel-body">
        {% if questionnaire.mediaContext is null %}
            <div class="text-center">
                <span id="add-context" class="btn btn-default">{{ 'generic.add' | trans }}</span>
            </div>
        {% else %}
           {{ macros.displayMedia(test, questionnaire, questionnaire.mediaContext) }}
        {% endif %}
    </div>
</div>
