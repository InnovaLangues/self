{% if potentialQuestionnaires|length <1  %}
    {{ 'editor.task.no_potential' | trans }}
{% else %}
    <div class="input-group">
        <span class="input-group-addon">{{ 'generic.filter' | trans }} </span>
        <input type="text" id="search" class="form-control" value="">
    </div>
    <hr/>
    <ul id="tasks" class="list-group">
        {% for questionnaire in potentialQuestionnaires %}
            <li class="list-group-item">
                <span class="btn btn-default add-task" data-test-id="{{ test.id }}" data-questionnaire-id="{{ questionnaire.id }}">
                    <span class="glyphicon glyphicon-log-in"></span>
                    Affecter
                </span>

                <span class="btn btn-default duplicate-task" data-test-id="{{ test.id }}" data-questionnaire-id="{{ questionnaire.id }}">
                    <span class="glyphicon glyphicon-duplicate"></span>
                    Dupliquer
                </span>

                <span class="label label-primary">
                    {% if questionnaire.theme != "" %}
                        {{ questionnaire.theme }}
                    {% else %}
                        {{ 'editor.task.unnamed' | trans }}
                    {% endif %}
                </span>
            </li>
        {% endfor %}
    </ul>
{% endif %}
