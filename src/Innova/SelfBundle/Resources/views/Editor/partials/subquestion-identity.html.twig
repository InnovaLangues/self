{% form_theme form with 'InnovaSelfBundle:Editor:common/fields.html.twig' %}

<form id="subquestion-identity">
    <div class="clearfix">
        {{ form_row(form.save, {'attr': {'class': 'pull-right btn btn-success'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.level) }}
        {{ form_widget(form.level) }}
    </div>

    <hr/>

    <div class="form-group">
        {{ form_label(form.focuses) }}
        {{ form_widget(form.focuses) }}
    </div>

    <div class="form-group">
        {{ form_label(form.goals) }}
        {{ form_widget(form.goals) }}
    </div>

    <div class="form-group">
        {{ form_label(form.redundancy) }}
        <p><i>(linguistique, langagi√®re, et/ou visuelle)</i></p>
        {{ form_widget(form.redundancy) }}
    </div>

    <div class="form-group">
        {{ form_label(form.difficultyIndex) }}
        {{ form_widget(form.difficultyIndex) }}
    </div>

    <div class="form-group">
        {{ form_label(form.discriminationIndex) }}
        {{ form_widget(form.discriminationIndex) }}
    </div>

    {{ form_rest(form) }}
</form>
