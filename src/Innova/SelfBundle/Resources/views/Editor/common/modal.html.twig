<div class="modal fade" id="modal-media-type" tabindex="-1" role="dialog" aria-labelledby="modal-media-typeLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">{{ 'editor.media.choose' | trans }}</h4>
			</div>
			<div class="modal-body">
				<span media-type="audio" class="btn btn-default glyphicon glyphicon-headphones media-type-choice">
					{{ 'editor.media.audio' | trans }}
				</span>
				<span media-type="image" class="btn btn-default glyphicon glyphicon-picture media-type-choice">
					{{ 'editor.media.picture' | trans }}
				</span>
				<span media-type="video" class="btn btn-default glyphicon glyphicon-facetime-video media-type-choice">
					{{ 'editor.media.video' | trans }}
				</span>
				<span media-type="texte" class="btn btn-default glyphicon glyphicon glyphicon-align-center media-type-choice">
					{{ 'editor.media.text' | trans }}
				</span>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">{{ 'generic.close' | trans }}</button>
			</div>
		</div>
	</div>
</div>

