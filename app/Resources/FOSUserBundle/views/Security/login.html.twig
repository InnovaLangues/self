{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-warning">{{ error|trans }}</div>
{% endif %}

<div class="modal-body">
    <div class="well">
        <form action="{{ path('fos_user_security_check') }}" class="form-horizontal" method="post">
            <fieldset>
                <div id="legend">
                    <legend class="">{{ 'security.login.submit'|trans }}</legend>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username" class="col-lg-2 control-label">{{ 'security.login.username'|trans }}</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="username" name="_username">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="col-lg-2 control-label">{{ 'security.login.password'|trans }}</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="password" name="_password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary"/>
                        <a class="btn btn-default" href="{{ path('fos_user_registration_register') }}">Cr√©er un compte</a></li>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

{% endblock fos_user_content %}
