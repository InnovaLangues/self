<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SELF{% endblock %}</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
        <link href="//code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" rel="stylesheet"/>
        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script type="text/javascript" src="{{ asset('bundles/innovaself/js/mediaelement-and-player.min.js') }}"></script>
        <link href="{{ asset('bundles/innovaself/css/main.css') }}" rel="stylesheet"/>

        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="navbar-header">
                    <ul class="nav navbar-nav">
                        <li class="active"><a style="cursor: default;" href="#">SELF</a></li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% if app.user is not null and is_granted('ROLE_ADMIN') %}
                            {# <li><a href="{{ path('admin_user') }}">{{ 'menu.users' | trans }}</a></li> #}
                            <li><a href="{{ path('csv_export') }}">{{ 'menu.csv_export' | trans }}</a></li>
                            <li><a href="{{ path('show_tests') }}">{{ 'menu.tests' | trans }}</a></li>
                            <li><a href="{{ path('editor_tests_show') }}">{{ 'menu.editor' | trans }}</a></li>
                        {% endif %}
                        <li><a data-toggle="modal" href="#helpModal">{{ 'menu.help' | trans }}</a></li>
                        <li><a data-toggle="modal" href="#creditModal">{{ 'menu.credit' | trans }}</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'menu.logout' | trans }}</a></li>
                    </ul>
                </div>
            </nav>
        {% endblock %}

        <div id="body" class="container">
            <div class="row">
                <div class="col-md-12">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        SELF - Système d’Evaluation en Langues à visée Formative.
                        <span class="pull-right">
                            <span class="btn btn-default btn-xs change-locale">{{ 'menu.language_change' | trans }}</span>
                        </span>
                    </div>
                </div>
            </div> 
        </div>

        <!-- Modal -->
        <div class="modal fade helpModal" id="helpModal" >
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">{{ 'menu.help' | trans }}</h4>
                    </div>
                    <div class="modal-body">
                    <!-- Help file -->
                        {% include 'InnovaSelfBundle::Main/help.html.twig' %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">{{ 'generic.ok' | trans }}</button>
                  </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->


        <div id="locale-modale" class="modal fade " tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'menu.language_change' | trans }}</h4>
                    </div>
                    <div class="modal-body text-center">
                        {% for locale in ['en', 'fr', 'it'] %}
                            <span class="btn btn-default locale-select">{{ locale | upper }}</span>
                        {% endfor %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">{{ 'generic.close' | trans }}</button>
                    </div>
                </div>
            </div>
        </div>

                    <div class="modal fade creditModal" id="creditModal" >
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">{{ 'menu.credit' | trans }}</h4>
                                </div>
                                <div class="modal-body">
                                <!-- Help file -->
                                    {% include 'InnovaSelfBundle::Main/credit.html.twig' %}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">{{ 'generic.ok' | trans }}</button>
                              </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->

        {% block javascripts %}
            <!-- Jquery first then Bootstrap call -->
            <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
			<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script src="{{ asset('bundles/innovaself/js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
